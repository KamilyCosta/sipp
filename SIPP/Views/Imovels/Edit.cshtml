@model SIPP.Models.Imovel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Imóvel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ImovelId" />

            <div class="form-group">
                <label asp-for="Endereco" class="control-label"></label>
                <input asp-for="Endereco" class="form-control" />
                <span asp-validation-for="Endereco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cidade" class="control-label"></label>
                <input asp-for="Cidade" class="form-control" />
                <span asp-validation-for="Cidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QntDormitorios" class="control-label"></label>
                <input asp-for="QntDormitorios" class="form-control" />
                <span asp-validation-for="QntDormitorios" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QntGarragem" class="control-label"></label>
                <input asp-for="QntGarragem" class="form-control" />
                <span asp-validation-for="QntGarragem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tamanho" class="control-label"></label>
                <input asp-for="Tamanho" class="form-control" />
                <span asp-validation-for="Tamanho" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TamanhoAreaContuida" class="control-label"></label>
                <input asp-for="TamanhoAreaContuida" class="form-control" />
                <span asp-validation-for="TamanhoAreaContuida" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MetodoPagamento" class="control-label"></label>
                <input asp-for="MetodoPagamento" class="form-control" />
                <span asp-validation-for="MetodoPagamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>

            <div class="btn-group" role="group" aria-label="Basic checkbox toggle button group">
                <input asp-for="Venda" type="checkbox" class="btn-check" id="btncheck1" autocomplete="off">
                <label asp-for="Venda" class="btn btn-outline-primary" for="btncheck1">Venda</label>

                <input asp-for="Aluguel" type="checkbox" class="btn-check" id="btncheck2" autocomplete="off">
                <label asp-for="Aluguel" class="btn btn-outline-primary" for="btncheck2">Aluguel</label>
            </div>

            <h5>Imagens Atuais</h5>
            <div class="d-flex flex-wrap">
                @if (Model.Imagens != null && Model.Imagens.Any())
                {
                    foreach (var imagem in Model.Imagens)
                    {
                        <div class="m-1 position-relative">
                            <img src="@Url.Content(imagem.Url)" class="img-thumbnail" alt="Imagem de @Model.Endereco" style="width: 150px; height: auto;">
                            <input type="checkbox" name="removerImagens" value="@imagem.ImagemId" class="position-absolute top-0 end-0" />
                            <span class="badge bg-danger" style="cursor: pointer;" title="Remover imagem">X</span>
                        </div>
                    }
                }
                else
                {
                    <p>Nenhuma imagem encontrada.</p>
                }
            </div>

            <!-- Campo para adicionar novas imagens -->
            <div class="form-group">
                <label>Adicionar Novas Imagens:</label>
                <input type="file" name="novasImagens" multiple />
            </div>

            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar à Lista</a>
</div>
