@model List<SIPP.Models.Imovel>
@section Styles {
    <link rel="stylesheet" href="~/css/styles.css">
}

<div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/img/fotoqhome1.jpg" class="d-block w-100" alt="IMG 1">
        </div>
        <div class="carousel-item">
            <img src="~/img/fotohome2.jpg" class="d-block w-100" alt="IMG 2">
        </div>
        <div class="carousel-item">
            <img src="~/img/fotohome3.jpg" class="d-block w-100" alt="IMG 3">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>


            <!-- Exibição das casas em destaque -->
            <div class="conteudoHome m-auto">
                <p class="titulo">Casas em destaque</p>
                <div class="house-container">
                    @foreach (var imovel in Model)
                    {
                        <div class="house-card">
                            <!-- Exibe o carrossel de imagens do imóvel -->
                            <div id="carouselExampleControls_@imovel.ImovelId" class="carousel slide" data-bs-ride="carousel">
                                <div class="carousel-inner">
                                    @foreach (var imagem in imovel.Imagens)
                                    {
                                        <div class="carousel-item @(imagem == imovel.Imagens.FirstOrDefault() ? "active" : "")">
                                            <img src="@imagem.Url" style="width: 300px; height: 200px; object-fit: cover;" class="d-block carousel-img" alt="Imagem do Imóvel">
                                        </div>
                                    }
                                </div>
                                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls_@imovel.ImovelId" data-bs-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Previous</span>
                                </button>
                                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls_@imovel.ImovelId" data-bs-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Next</span>
                                </button>
                            </div>

                            <!-- Informações do imóvel -->
                            <div class="house-info">
                                <h3>@imovel.Endereco</h3>
                                <p>@imovel.Cidade</p>
                                <button class="price-button">R$ @imovel.Valor.ToString("N2")</button>
                            </div>
                        </div>
                    }
                </div>
            </div>

 

