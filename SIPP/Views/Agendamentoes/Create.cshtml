@model SIPP.Models.Agendamento

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-4">

<h4>Agendamento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

          
        
            <div class="form-group">
                <label asp-for="DataAge" class="control-label"></label>
                <input asp-for="DataAge" class="form-control" type="date" />
                <span asp-validation-for="DataAge" class="text-danger"></span>
            </div>

           
            <div class="form-group">
                <label asp-for="HoraAge" class="control-label"></label>
                <input asp-for="HoraAge" class="form-control" type="time" />
                <span asp-validation-for="HoraAge" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input asp-for="ImovelId" class="form-control" type="hidden" />
            </div>

            
            <div class="form-group">
                <label asp-for="CorretorId" class="control-label"></label>
                <select asp-for="CorretorId" class="form-control" asp-items="ViewBag.CorretorId"></select>
                <span asp-validation-for="CorretorId" class="text-danger"></span>
            </div>

            <div class="display-flex">
                <input type="submit" value="Create" class="btn btn-primary" />
               
                 <a asp-action="Index"> <i class="bi bi-x-circle btn-outline-prima "></i>  </a>
                
            </div>
        </form>
    </div>
</div>
</div>


