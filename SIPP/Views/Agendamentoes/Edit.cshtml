@model SIPP.Models.Agendamento

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-4">

<h1>Editar</h1>


<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AgendamentoId" />
            <div class="form-group">
                <label asp-for="DataAge" class="control-label"></label>
                <input asp-for="DataAge" class="form-control" />
                <span asp-validation-for="DataAge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoraAge" class="control-label"></label>
                <input asp-for="HoraAge" class="form-control" />
                <span asp-validation-for="HoraAge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClienteId" class="control-label"></label>
                <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId"></select>
                <span asp-validation-for="ClienteId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CorretorId" class="control-label"></label>
                <select asp-for="CorretorId" class="form-control" asp-items="ViewBag.CorretorId"></select>
                <span asp-validation-for="CorretorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index"> <i class="bi bi-x-circle btn-outline-prima "></i> </a>
            </div>
        </form>
    </div>
</div>
</div>



